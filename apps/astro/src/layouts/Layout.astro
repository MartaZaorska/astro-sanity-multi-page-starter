---
import '@/global/global.scss';
import { LOCALE } from '@/global/constants';
import Head, { type HeadProps } from './Head.astro';
import OrganizationSchema from '@/schema/OrganizationSchema.astro';
import Footer from './Footer.astro';
import Header from './Header.astro';
import CookieConsent from './CookieConsent.astro';

type Props = HeadProps & {
  hideNavigation?: boolean;
};
const { hideNavigation = false, ...props } = Astro.props;
---

<!doctype html>
<html lang={LOCALE}>
  <head>
    <Head {...props} />
    <slot name='head' />
    <OrganizationSchema />
  </head>
  <body>
    <CookieConsent />
    <Header hideNavigation={hideNavigation} />
    <main id='main'>
      <slot />
    </main>
    <Footer hideNavigation={hideNavigation} />
  </body>
</html>
