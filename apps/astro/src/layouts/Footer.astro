---

<footer class='footer'>
  <div class="max-width">
    {
      !hideNavigation && (
        <nav aria-label='Nawigacja w stopce'>
          {footer.services.map(({ name, href, list = [] }) => (
            <div class='column'>
              <a
                href={href}
                aria-current={pathname === href ? 'page' : undefined}
              >
                {name}
              </a>
              {list.map(({ name, href }) => (
                <a
                  href={href}
                  aria-current={pathname === href ? 'page' : undefined}
                >
                  {name}
                </a>
              ))}
            </div>
          ))}
          <div class='column'>
            {footer.links.map(({ name, linkType, href }) => (
              <a
                href={href}
                {...(linkType === 'internal' ? { 'aria-current': pathname.startsWith(href) ? 'page' : undefined } : {})}
                {...(href === '/polityka-prywatnosci' ? { target: '_blank' } : {})}
              > 
                {name}
              </a>
            ))}
            {gtmId && <button class="reset-cookies">Ustawienia plik√≥w cookies</button>}
          </div>
        </nav>
        <div class="socials">
          {Object.entries(socials).map(([key, value]) => (
            <a href={value} aria-label={key} rel="noreferrer" target="_blank">
              <Fragment set:html={SOCIALS_ICONS[key as SocialKey]} />
            </a>
          ))}
        </div>
      )
    }
    <p class="copyright">&copy; Name {new Date().getFullYear()}</p>
  </div>
</footer>
<style lang='scss'>
  .footer {
    background-color: var(--neutral-200);
    padding: 3.5rem 0 1.5rem;
    
    > div {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      justify-content: space-between;
      align-items: flex-start;
    }

    nav {
      display: flex;
      align-items: flex-start;
      gap: 5rem;

      .column {
        display: grid;
        justify-items: start;
        gap: 0.2rem;
        a, button {
          background-color: transparent;
          padding: 0.15rem 0.25rem;
          border-radius: 0.2rem;
          transition: background-color 200ms;
          &:hover{
            background-color: var(--neutral-100);
          }
          &[aria-current='page']{
            background-color: var(--primary-500);
            color: var(--neutral-100);
          }
        }
      }
    }

    .socials {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      a {
        width: 44px;
        height: 44px;
        display: grid;
        place-items: center;
        color: var(--primary-500);
        opacity: 0.9;
        transition: opacity 200ms var(--easing);
        &:hover {
          opacity: 1;
        }
      }      
    }

    .copyright {
      width: 100%;
      text-align: center;
      font-size: 0.9rem;
      color: var(--neutral-600);
    }
  }
</style>
<script>
  import { setCookie } from '@/utils/set-cookie'

  const footer = document.querySelector('.footer')!
  const resetCookiesButton = footer.querySelector<HTMLButtonElement>('.reset-cookies');
  if(resetCookiesButton){
    resetCookiesButton.addEventListener('click', () => {
      document.cookie.split(';').forEach((cookie) => {
        const eqPos = cookie.indexOf('=');
        const name = eqPos > -1 ? cookie.substring(0, eqPos) : cookie;
        setCookie(name, '', -1);
      })
      window.location.reload();
    });
  }
</script>
