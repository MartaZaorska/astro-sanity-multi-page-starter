---
import sanityFetch from '@/utils/sanity.fetch';

type Props = {
  hideNavigation?: boolean;
};

const pathname = Astro.url.pathname;
const { hideNavigation = false } = Astro.props;

const { socials, footer, gtmId } = await sanityFetch<{
  socials: { facebook?: string; instagram?: string; };
  gtmId?: string;
  footer: {
    links: {
      name: string;
      linkType: 'internal' | 'anchor';
      href: string;
    }[];
    services: {
      name: string;
      href: string;
      list?: { name: string; href: string }[];
    }[];
  };
}>({
  query: `
    {
      "socials": *[_type == "socials"][0]{
        facebook,
        instagram
      },
      "gtmId": coalesce(*[_type == "global"][0].analytics.gtmId, null),
      "footer": *[_type == "navigation"][0].footer {
        links[]{
          "name": select(
            linkType == 'anchor' => title,
            linkType == 'internal' => coalesce(title, internal -> name),
            ''
          ),
          linkType,
          "href": select(
            linkType == "internal" => internal -> slug.current,
            linkType == "anchor" => anchor,
            "#"
          ),
       },
       "services": coalesce(
         services[]->{
           name,
           "href": slug.current,
           "list": *[_type == "Service_Collection" && isSubPage && parentPage._ref == ^._id] | order(_createdAt asc){
             name,
             "href": slug.current
           }  
         },
         *[_type == "Service_Collection" && (!defined(isSubPage) || !isSubPage)] | order(_createdAt asc) [0...2]{
           name,
           "href": slug.current,
           "list": *[_type == "Service_Collection" && isSubPage && parentPage._ref == ^._id] | order(_createdAt asc){
             name,
             "href": slug.current
           } 
         }
       )
     }
   }`,
});

type SocialKey = 'facebook' | 'instagram';
